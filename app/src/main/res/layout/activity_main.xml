<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tv_hms_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:background="@drawable/et_box"
            android:hint="HMS Status"
            android:padding="10dp"
            android:textColorHint="#878686"
            android:inputType="text|textMultiLine"
            android:autofillHints="true"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/tv_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:background="@drawable/et_box"
            android:hint="Device Token"
            android:padding="10dp"
            android:textColorHint="#878686"
            android:inputType="text|textMultiLine"
            android:autofillHints="true"
            />

        <EditText
            android:id="@+id/et_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:background="@drawable/et_box"
            android:hint="URL"
            android:padding="10dp"
            android:textColorHint="#878686"
            android:inputType="text|textMultiLine"
            android:autofillHints="true"
            />

        <EditText
            android:id="@+id/et_message_android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:background="@drawable/et_box"
            android:hint="Message to WebView"
            android:padding="10dp"
            android:textColorHint="#878686"
            android:inputType="text|textMultiLine"
            android:autofillHints="true"
            />

        <TextView
            android:id="@+id/tv_response_android"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:background="@drawable/et_box"
            android:hint=""
            android:padding="10dp"
            android:textColorHint="#878686"
            android:inputType="text|textMultiLine"
            android:autofillHints="true"
            />

        <Button
            android:id="@+id/btn_show_token"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:text="Show Token"
            android:textSize="18sp" />
        <Button
            android:id="@+id/btn_send_android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:text="Send"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_load_android"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:text="Load"
            android:textSize="18sp" />

        <WebView
            android:id="@+id/wv_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/et_box"
            android:padding="10dp"
            android:backgroundTint="#878686"
            />

<!--        <Button-->
<!--            android:id="@+id/btn_show_response"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="60dp"-->
<!--            android:layout_margin="10dp"-->
<!--            android:text="Show response"-->
<!--            android:textSize="18sp" />-->



    </LinearLayout>
</ScrollView>